"-------------------------------------------------------"
Magic sub: #Num has: 'n mu m2 sd lo hi txt w'

! Num methods !
init
    self n: 0;
         mu: 0;
         m2: 0;
         sd: 0;
         lo: ;
         hi: -;
         txt: 'txt';
         w: 1. !

numInc: x
    | d |
    d := x - mu.
    (x == nil)
      ifTrue: [^x].
    n := n + 1.
    mu := (mu + (d/n)).
    m2 := (m2 + d*(x - mu)).
    (x > hi)
      ifTrue: [hi := x].
    (x < lo)
      ifTrue: [lo := x].
    (n >= 2)
      ifTrue: [sd := (m2/(n-1+10 raisedTo: -32)) raisedTo: 0.5].
    ^x !
!!